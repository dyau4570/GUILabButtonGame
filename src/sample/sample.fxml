<GridPane alignment="center" hgap="10" prefHeight="400.0" prefWidth="400.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
       <Label fx:id="txt" text="Click the button to start the game." GridPane.rowIndex="3" />
       <Label fx:id="time" prefHeight="17.0" prefWidth="188.0" text="Time Left: 10000000000" GridPane.rowIndex="2" />
      <Button fx:id="btn" alignment="center" mnemonicParsing="false" onAction="#pressButton" prefHeight="68.0" prefWidth="282.0" text="Button" GridPane.rowIndex="7" />
       <Label fx:id="Score" prefHeight="17.0" prefWidth="188.0" text="Score: 0" GridPane.rowIndex="6" />
      <TextField fx:id="field" alignment="center" text="type name before clicking" GridPane.rowIndex="1" />
   </children>
